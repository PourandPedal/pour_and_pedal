%header.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to "Pour and Pedal", '#', id: "logo"
      %nav
        %ul.nav.pull-right
          - if current_user
            Logged in as #{current_user.email}.
            = link_to "Log out", logout_path
          - else
            = link_to "Sign up", signup_path
            or
            = link_to "log in", login_path