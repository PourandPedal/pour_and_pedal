%header.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to image_tag('pourpedal_header_logo.png'), root_path, id: "logo"
      %nav
        %ul.nav.pull-right
          %li
            %a{"data-toggle" => "modal", :href => "#myModal", :role => "button"} redeem
          %li
            %a{"data-toggle" => "modal", :href => "#myreservation", :role => "button"} my reservation
          - if logged_in?
            %li
              = link_to "Sign out", logout_path
#myModal.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
    %h3#myModalLabel Enter your redemption code
  .modal-body
    %p
      = form_tag '/codes' do
        = text_field_tag :code
        %br
        = submit_tag "Submit", class: 'btn btn-danger'
        %br
          = image_tag('wine-bike-small.png', class: 'pull-right')
#myreservation.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
    %h3#myModalLabel Enter your confirmation number
  .modal-body
    %p
      = form_tag '/codes' do
        = text_field_tag :code
        %br
        = submit_tag "Submit", class: 'btn btn-danger'
        %br
          = image_tag('wine-bike-small.png', class: 'pull-right')
