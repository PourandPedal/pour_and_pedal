- provide(:title, 'confirmation')
%h1.headline
  gift certificate
.headline.paddtop
= form_tag gift_certificate_charge_path do
  %article
    %label.amount
      %h4
        Purchasing #{pluralize(@cert.number_purchased, 'gift certificate')} for #{@cert.recipient_first_name}.
      %br
        %h4
          Amount: #{number_to_currency(session[:price])}
  %p
    %script.stripe-button{"data-amount" => session[:price] * 100, "data-description" => "P&P Gift Certificate", "data-key" => Rails.configuration.stripe[:publishable_key], :src => "https://checkout.stripe.com/v2/checkout.js"}
    = link_to 'cancel', new_gift_certificate_path
