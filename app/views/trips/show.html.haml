- if current_user
  %h1
    #{trip.try(:title)}, #{trip.event.try(:title)}
  %p
    = trip.date.to_formatted_s(:long_ordinal)
  %h3
    = trip.clients.count
  %ul
    - trip.clients.each do |client|
      %li
        #{client.last_name}, #{client.first_name}
        %p
          = client.email
        %p
          = client.phone
        %p
          #{client.tickets_purchased} tickets purchased
- else
  %h3
    Please login to access this page.